<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgkc"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/dotbig"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="My Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32dp"
                    android:textColor="#444747"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/kc_4"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"/>
            </RelativeLayout>

            <TextView
                android:text="Anna Karenina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="28dp"
                android:textColor="#444747"
                android:textAlignment="center">
            </TextView>

            <TextView
                android:text="University of Lagos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_margin="2dp"
                android:textAlignment="center">
            </TextView>

            <TextView
                android:text="Lagos, Nigeria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textAlignment="center">
            </TextView>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="13dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Photos"
                android:textSize="23dp"
                android:textAlignment="textStart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:text="Followers"
                android:textSize="23dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:text="Following"
                android:textSize="23dp"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="23"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="#444747"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:text="46"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="#444747"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:text="204"
                android:textSize="28dp"
                android:textColor="#444747"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/kc_3"
                android:layout_width="200dp"
                android:layout_height="300dp"/>

            <ImageView
                android:layout_width="210dp"
                android:layout_height="141dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/kc" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="210dp"
                android:layout_marginTop="155dp"
                android:layout_height="141dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/kc_2" />

        </RelativeLayout>

    </LinearLayout>



</ScrollView>